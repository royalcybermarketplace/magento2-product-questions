<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                    <resource id="RoyalCyberMarketplace_ProductQuestions::menus" title="Product Questions">
                        <resource id="RoyalCyberMarketplace_ProductQuestions::question" title="Questions" translate="title" sortOrder="10">
                            <resource id="RoyalCyberMarketplace_ProductQuestions::question_save" title="Save Question" translate="title" sortOrder="10" />
                            <resource id="RoyalCyberMarketplace_ProductQuestions::question_delete" title="Delete Question" translate="title" sortOrder="20" />
                        </resource>
                        <resource id="RoyalCyberMarketplace_ProductQuestions::answer" title="Answers" translate="title" sortOrder="10">
                            <resource id="RoyalCyberMarketplace_ProductQuestions::answer_save" title="Save Answer" translate="title" sortOrder="10" />
                            <resource id="RoyalCyberMarketplace_ProductQuestions::answer_delete" title="Delete Answer" translate="title" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="RoyalCyberMarketplace_ProductQuestions::configuration" title="Product Question Configuration" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
